<UserControl x:Class="MainMenu.AccountSettingsViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainMenu"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500">

    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Style.Setters>
                <Setter Property="Margin" Value="0"/>
            </Style.Setters>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Style.Setters>
                <Setter Property="Margin" Value="4"/>
            </Style.Setters>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Margin" Value="5"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid Background="LightGray" ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox>
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Search" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Name="ChangeUsernameHeadlineLabel" Content="Change username" FontWeight="DemiBold" FontSize="15" Grid.Column="0" Grid.Row="0"></Label>

        <StackPanel Name="ChangeUsernameLabelsPanel" Grid.Column="0" Grid.Row="1">
            <Label Name="UsernameLabel" Content="Username:"></Label>
            <Label Name="EmailLabel" Content="Email:"></Label>
            <Label Name="RepeatEmailLabel" Content="Repeat Email:"></Label>
        </StackPanel>

        <StackPanel Name="ChangeUsernameTextBoxPanel" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" MinWidth="100">
            <TextBox Name="UsernameTextBox" ></TextBox>
            <TextBox Name="EmailTextBox"></TextBox>
            <TextBox Name="RepeatEmailTextBox"></TextBox>
        </StackPanel>

        <Label Name="ChangePasswordHeadlineLabel" Content="Change username" FontWeight="DemiBold" FontSize="15" Grid.Column="0" Grid.Row="2"></Label>

        <StackPanel Name="ChangePasswordLabelsPanel" Grid.Column="0" Grid.Row="3">
            <Label Name="CurrentPasswordLabel" Content="Current password:"></Label>
            <Label Name="NewPasswordLabel" Content="New password:"></Label>
            <Label Name="RepeatNewPasswordLabel" Content="Repeat new password:"></Label>
        </StackPanel>

        <StackPanel Name="ChangePasswordTextBoxPanel" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" MinWidth="100">
            <TextBox Name="CurrentPasswordTextBox"></TextBox>
            <TextBox Name="NewPasswordTextBox"></TextBox>
            <TextBox Name="RepeatNewPasswordTextBox"></TextBox>
        </StackPanel>

        <StackPanel Name="LogoutAndDeleteBtnPanel" Grid.Column="0" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Name="LogoutBtn" Content="Logout"></Button>
            <Button Name="DeleteBtn" Content="Delete Account" GotFocus="DeleteBtn_OnGotFocus"></Button>
        </StackPanel>

        <StackPanel Name="SaveBtnPanel" Grid.Column="1" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="SaveBtn" Content="Save"></Button>
        </StackPanel>

    </Grid>
</UserControl>
